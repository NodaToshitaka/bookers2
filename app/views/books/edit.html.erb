<div>
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path, local:true do |f| %>
    <%= render "devise/shared/error_messages", resource: @book %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Update Book' %>
  <% end%>
  <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
</div>